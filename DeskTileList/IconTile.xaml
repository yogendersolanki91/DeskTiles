<Window x:Class="DeskTileList.IconTile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tile="clr-namespace:DeskTileList"
        Title="IconTile"  ResizeMode="CanResizeWithGrip" SizeChanged="TileList_SizeChanged" Width="250" Height="300" SizeToContent="WidthAndHeight" Loaded="Window_Loaded" SnapsToDevicePixels="True"  WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    
    <DockPanel  LastChildFill="True">
        <tile:TileList SizeChanged="TileList_SizeChanged" x:Name="tileObj" SnapsToDevicePixels="True" MouseLeftButtonDown="PART_TITLEBAR_MouseLeftButtonDown" ></tile:TileList> 
    </DockPanel>
</Window>
