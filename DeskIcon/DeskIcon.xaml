<UserControl x:Class="DeskIcon.DeskIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             mc:Ignorable="d" 
             >
    
    <Grid Margin="5,5,5,5">

        <StackPanel Name="Container" Width="65" Height="80" >
            
            <Image Name="IconShow" Height="48" Width="48" DockPanel.Dock="Top" VerticalAlignment="Center"  HorizontalAlignment="Center"  />
                <TextBlock SnapsToDevicePixels="True" VerticalAlignment="Bottom" TextAlignment="Center" HorizontalAlignment="Stretch" DockPanel.Dock="Bottom" TextWrapping="Wrap"  Name="FileName"  FontSize="12" FontFamily="Arial"  Foreground="White">
               
                    <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="1" Direction="300" Opacity="1" BlurRadius="2"></DropShadowEffect>
                 
                </TextBlock.Effect>
                
                </TextBlock>
            </StackPanel>
        
    </Grid>
    
</UserControl>
